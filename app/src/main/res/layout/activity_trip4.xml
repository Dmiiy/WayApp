<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:background="@color/light_pink"
tools:context=".MainActivity">

<ScrollView
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card3"
        android:orientation="vertical"
        >




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_recycler4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>
</ScrollView>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Старые времена"
    android:textStyle="bold"
    android:textSize="25sp"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:textColor="@color/black"/>
<TextView
    android:id="@+id/alertdialoginfotrip4"
    android:layout_gravity="center"
    android:layout_width="390dp"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    android:text="Узнать информацию о туре"
    android:gravity="center"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:textStyle="italic"/>


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/route4" />


<CheckBox
    android:layout_gravity="center"
    android:id="@+id/checkBoxt4"
    android:layout_width="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content"
    android:text="Добавить посещение кафе"
    android:textColor="@color/black"
    android:textSize="18sp"/>

<Button
    android:id="@+id/buttonbacktr4"
    android:layout_gravity="center"
    android:layout_width="225dp"
    android:layout_height="63dp"
    android:layout_marginTop="20dp"
    android:backgroundTint="@color/black"
    android:text="ПОСТРОИТЬ"
    android:textColor="@color/white"
    android:textSize="22sp"
    android:textStyle="bold"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    />

<TextView
    android:id="@+id/backtoregusersfromtrip4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Остановить маршрут"
    android:textColor="@color/black"
    android:textSize="16sp"
    android:layout_marginTop="15dp"
    android:textStyle="normal"
    android:layout_gravity="center"
    />

</LinearLayout>